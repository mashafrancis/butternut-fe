{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "removeComments": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@placeholders/*": ["src/placeholders/*"],
      "@pages/*": ["src/pages/*"],
      "@modules/*": ["src/store/modules/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "dist",
    "**/*.test.tsx"
  ]
}
